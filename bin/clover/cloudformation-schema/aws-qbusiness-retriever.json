  "required": ["ApplicationId", "Configuration", "DisplayName", "Type"],
  "readOnlyProperties": [
    "/properties/CreatedAt",
    "/properties/RetrieverArn",
    "/properties/RetrieverId",
    "/properties/Status",
    "/properties/UpdatedAt"
