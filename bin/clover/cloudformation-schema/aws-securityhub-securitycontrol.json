  }],
  "required": ["Parameters"],
  "createOnlyProperties": ["/properties/SecurityControlId"],
  "primaryIdentifier": ["/properties/SecurityControlId"],
  "additionalIdentifiers": [["/properties/SecurityControlArn"]],
