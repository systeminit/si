    },
    "read": {
      "permissions": ["iot:DescribeThingType", "iot:ListTagsForResource"]
    },
    "update": {
      "permissions": [
        "iot:DescribeThingType",
        "iot:UpdateThingType",
        "iot:ListTagsForResource",
        "iot:TagResource",
        "iot:UntagResource",
        "iot:DeprecateThingType"
