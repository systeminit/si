{
  "typeName": "AWS::DataZone::Project",
  "description": "Amazon DataZone projects are business use caseâ€“based groupings of people, assets (data), and tools used to simplify access to the AWS analytics.",
  "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-resource-providers-datazone",
  "definitions": {},
  "properties": {
    "CreatedAt": {
      "description": "The timestamp of when the project was created.",
      "type": "string",
      "format": "date-time"
    },
    "CreatedBy": {
      "description": "The Amazon DataZone user who created the project.",
      "type": "string"
    },
    "Description": {
      "description": "The description of the Amazon DataZone project.",
      "type": "string",
      "maxLength": 2048
    },
    "DomainId": {
      "description": "The identifier of the Amazon DataZone domain in which the project was created.",
      "type": "string",
      "pattern": "^dzd[-_][a-zA-Z0-9_-]{1,36}$"
    },
    "DomainIdentifier": {
      "description": "The ID of the Amazon DataZone domain in which this project is created.",
      "type": "string",
      "pattern": "^dzd[-_][a-zA-Z0-9_-]{1,36}$"
    },
    "GlossaryTerms": {
      "description": "The glossary terms that can be used in this Amazon DataZone project.",
      "type": "array",
      "insertionOrder": false,
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9_-]{1,36}$"
      },
      "maxItems": 20,
      "minItems": 1
    },
    "Id": {
      "description": "The ID of the Amazon DataZone project.",
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]{1,36}$"
    },
    "LastUpdatedAt": {
      "description": "The timestamp of when the project was last updated.",
      "type": "string",
      "format": "date-time"
    },
    "Name": {
      "description": "The name of the Amazon DataZone project.",
      "type": "string",
      "maxLength": 64,
      "minLength": 1,
      "pattern": "^[\\w -]+$"
    }
  },
  "required": ["DomainIdentifier", "Name"],
  "readOnlyProperties": [
    "/properties/Id",
    "/properties/CreatedAt",
    "/properties/CreatedBy",
    "/properties/DomainId",
    "/properties/LastUpdatedAt"
  ],
  "writeOnlyProperties": ["/properties/DomainIdentifier"],
  "primaryIdentifier": ["/properties/DomainId", "/properties/Id"],
  "createOnlyProperties": ["/properties/DomainIdentifier"],
  "additionalIdentifiers": [["/properties/DomainIdentifier"]],
  "tagging": {
    "taggable": false,
    "tagOnCreate": false,
    "tagUpdatable": false,
    "cloudFormationSystemTags": false
  },
  "handlers": {
    "create": {
      "permissions": ["datazone:CreateProject", "datazone:GetProject"]
    },
    "read": {
      "permissions": ["datazone:GetProject"]
    },
    "update": {
      "permissions": ["datazone:UpdateProject", "datazone:GetProject"]
    },
    "delete": {
      "permissions": ["datazone:DeleteProject", "datazone:GetProject"]
    },
    "list": {
      "handlerSchema": {
        "properties": {
          "DomainIdentifier": {
            "$ref": "#/properties/DomainIdentifier"
          }
        },
        "required": ["DomainIdentifier"]
      },
      "permissions": ["datazone:ListProjects"]
    }
  },
  "additionalProperties": false
}
