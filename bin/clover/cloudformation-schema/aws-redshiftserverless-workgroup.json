          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^sg-[0-9a-fA-F]{8,}$",
            "maxLength": 255,
            "minLength": 0
          },
          "insertionOrder": false
        },
        "SubnetIds": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^subnet-[0-9a-fA-F]{8,}$",
