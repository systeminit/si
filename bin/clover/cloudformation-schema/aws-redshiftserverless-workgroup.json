          "type": "string",
          "pattern": "^[a-z0-9-]*$",
          "maxLength": 64,
          "minLength": 3
        },
        "NamespaceName": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "maxLength": 64,
          "minLength": 3
        },
        "BaseCapacity": {
          "type": "integer"
        },
        "MaxCapacity": {
          "type": "integer"
        },
