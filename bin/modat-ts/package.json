{
  "name": "modat-ts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "tsc --build",
    "build:clean": "npm run clean && npm run build",
    "build:watch": "npm run clean && tsc --watch",
    "watch": "npm run build:watch",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "run": "npm run build && node ./dist/worker.js",
    "start": "ts-node src/worker.ts",
    "start.watch": "nodemon src/worker.ts",
    "workflow": "ts-node src/client.ts"
  },
  "author": "System Initiative, Inc.",
  "license": "Proprietary",
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "commander": "^9.2.0",
    "debug": "^4.3.4",
    "nanoid": "3.x",
    "temporalio": "1.0.0-rc.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@tsconfig/node18": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.4.2"
  },
  "volta": {
    "node": "16.5.0",
    "npm": "7.20.3"
  }
}
