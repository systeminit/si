{
  "name": "@systeminit/si",
  "version": "1.0.5",
  "description": "Unified CLI for System Initiative - schema management and template automation",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/systeminit/si",
    "directory": "bin/si"
  },
  "homepage": "https://docs.systeminit.com",
  "exports": {
    ".": "./src/template.ts"
  },
  "publish": {
    "exclude": [
      "**/*_test.ts",
      "**/*.test.ts",
      "**/test_*.ts",
      "main.ts",
      "tmpl/"
    ]
  },
  "tasks": {
    "dev": "deno run --no-check --allow-net --allow-env --allow-read --allow-run --env-file=.env.local --allow-write main.ts",
    "build": "deno compile --no-check --allow-net --allow-env --allow-read --allow-write --allow-run --allow-import --include=data/templates/Claude.md.tmpl main.ts",
    "lint": "deno lint",
    "test": "deno test --allow-env --allow-read --allow-write --allow-run"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
    "@cliffy/command/completions": "jsr:@cliffy/command@^1.0.0-rc.7/completions",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.7",
    "@cliffy/prompt/input": "jsr:@cliffy/prompt@^1.0.0-rc.7/input",
    "@deno/loader": "jsr:@deno/loader@^0.3.9",
    "@logtape/logtape": "jsr:@logtape/logtape@^0.12.0",
    "@logtape/pretty": "jsr:@logtape/pretty@^1.1.0",
    "@logtape/redaction": "jsr:@logtape/redaction@^1.1.1",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.16.0",
    "@onjara/optic": "jsr:@onjara/optic@^2.0.3",
    "@std/assert": "jsr:@std/assert@1",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/ulid": "jsr:@std/ulid@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.5",
    "@systeminit/api-client": "jsr:@systeminit/api-client@^1.9.0",
    "axios": "npm:axios@^1.13.1",
    "ejs": "npm:ejs@^3.1.10",
    "jwt-decode": "npm:jwt-decode@^4.0.0",
    "lodash": "npm:lodash@^4.17.21",
    "posthog-node": "npm:posthog-node@^4.2.1",
    "ulid": "npm:ulid@^3.0.1",
    "zod": "npm:zod@^4.0.0",
    "zod-to-json-schema": "npm:zod-to-json-schema@^3.24.6",
    "zod-v3": "npm:zod@^3.21.4"
  },
  "lint": {
    "plugins": ["./lint/mod.ts"]
  }
}
