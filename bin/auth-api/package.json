{
  "name": "@si/auth-api",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "node --watch --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm ./src/main.ts",
    "build": "tsc --incremental false",
    "boot": "node --experimental-specifier-resolution=node ./dist/main.js",
    "boot-ts": "node --no-warnings --experimental-specifier-resolution=node --loader ts-node/esm ./src/main.ts",
    "lint": "eslint src --ext .ts,.cjs",
    "lint:strict": "STRICT_LINT=1 pnpm run lint",
    "lint:fix": "pnpm run lint --fix",
    "db:reset": "prisma migrate reset --force && prisma migrate deploy && prisma generate",
    "docker:build:aws": "cd ../.. && docker buildx build --output type=docker --platform=linux/amd64 -f bin/auth-api/Dockerfile . -t si/si-auth-api",
    "docker:tag:aws": "docker tag si/si-auth-api:latest 835304779882.dkr.ecr.us-east-2.amazonaws.com/si/si-auth-api:latest",
    "docker:push:aws": "docker push 835304779882.dkr.ecr.us-east-2.amazonaws.com/si/si-auth-api:latest",
    "docker:deploy:aws": "pnpm run docker:build:aws && pnpm run docker:tag:aws && pnpm run docker:push:aws",
    "docker:build:local": "cd ../.. && docker build -f bin/auth-api/Dockerfile . -t si/si-auth-api-local"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@prisma/client": "^4.12.0",
    "@types/ioredis": "^5.0.0",
    "auth0": "^3.2.0",
    "axios": "^0.27.2",
    "chalk": "^5.2.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "exit-hook": "^3.2.0",
    "glob": "^8.1.0",
    "ioredis": "^5.3.1",
    "is-promise": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3.0",
    "lodash": "^4.17.21",
    "marked": "^4.2.12",
    "nanoid": "^4.0.1",
    "parse-redis-url-simple": "^1.0.2",
    "posthog-node": "^2.6.0",
    "pretty-error": "^4.0.0",
    "prisma": "^4.12.0",
    "request-ip": "^3.3.0",
    "require-directory": "^2.1.1",
    "ulidx": "^0.5.0",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@si/eslint-config": "workspace:*",
    "@si/tsconfig": "workspace:*",
    "@swc/core": "^1.3.36",
    "@types/auth0": "^2.35.11",
    "@types/debug": "^4.1.7",
    "@types/glob": "^8.1.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa__cors": "^3.3.1",
    "@types/koa__router": "^12.0.0",
    "@types/lodash": "^4.14.191",
    "@types/marked": "^4.0.8",
    "@types/node": "^17.0.29",
    "@types/request-ip": "^0.0.37",
    "@types/uuid": "^9.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}