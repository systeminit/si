pnpm_task_binary(
    name = "lint-fix",
    command = "lint:fix",
    srcs = glob(["src/**/*"]),
    path = "bin/auth-api",
    deps = [
        "//:node_modules",
    ],
    visibility = ["PUBLIC"],
)

pnpm_task_binary(
    name = "dev",
    command = "dev",
    srcs = glob(["src/**/*"]),
    path = "bin/auth-api",
    deps = [
        "//:node_modules",
    ],
    visibility = ["PUBLIC"],
)

pnpm_task_binary(
    name = "db-reset",
    command = "db:reset",
    srcs = glob(["src/**/*"]),
    path = "bin/auth-api",
    deps = [
        "//:node_modules",
    ],
    visibility = ["PUBLIC"],
)

container_image(
    name = "auth-api",
    flake_lock = "//:flake.lock",
    build_deps = [
        "//bin/auth-api:auth-api",
    ],
    # Only currently need x86_64 for ECS deployments
    platform_targets = [
        "linux-x86_64",
    ],
)
