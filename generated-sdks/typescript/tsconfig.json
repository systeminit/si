{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/cjs",
    "rootDir": ".",
    "lib": ["ES2020", "DOM"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["*.ts"],
  "exclude": ["dist", "node_modules"]
}
