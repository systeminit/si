{
  "name": "si",
  "version": "1.0.0",
  "description": "SI monorepo",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "bootstrap": "./scripts/bootstrap.sh",
    "docker:deps": "make SI_SKIP_PULL=true prepare",
    "docker:deps:reset": "make prepare",
    "rc:build": "cargo build",
    "build": "turbo run rc:build build --filter=./app/* --filter=lang-js --filter=// --parallel",
    "rc:clean": "cargo clean",
    "clean": "turbo run rc:clean clean --filter=./app/* --filter=lang-js --filter=// --parallel",
    "dev:frontend": "pnpm run --filter=web dev",
    "dev:web": "pnpm run --filter=web dev",
    "dev:auth": "pnpm run --filter=\"@si/auth-portal\" --filter=\"@si/auth-api\" dev",
    "dev:auth-api": "pnpm run --filter=\"@si/auth-api\" dev",
    "dev:auth-portal": "pnpm run --filter=\"@si/auth-portal\" dev",
    "dev:backend": "turbo dev:backend",
    "dev:pinga": "turbo dev:backend --filter=pinga",
    "dev:council": "turbo dev:backend --filter=council",
    "dev:sdf": "turbo dev:backend --filter=sdf",
    "dev:veritech": "turbo dev:backend --filter=veritech",
    "rc:clippy": "cargo clippy --no-deps --all-targets -- -D warnings",
    "rc:fmt": "cargo fmt",
    "rc:check": "cargo check",
    "rc:doc": "env RUSTDOCFLAGS=\"-Dwarnings\" cargo doc --no-deps"
  },
  "devDependencies": {
    "fast-glob": "^3.2.12",
    "toml": "^3.0.0",
    "turbo": "^1.8.5"
  },
  "volta": {
    "node": "18.15.0"
  },
  "packageManager": "pnpm@7.18.1"
}
