[cells]
root = .
bxl = bxl
prelude = prelude
prelude-si = prelude-si
toolchains = toolchains
none = none

[cell_aliases]
buck = none
config = prelude
fbcode = none
fbsource = none

[parser]
target_platform_detector_spec = \
  target:root//...->prelude-si//platforms:default \
  target:prelude-si//...->prelude-si//platforms:default \
  target:toolchains//...->prelude-si//platforms:default \

[project]
ignore = \
  .git, \
  .idea, \
  app/**/node_modules, \
  bin/**/node_modules, \
  lib/**/node_modules, \
  node_modules, \
  target, \
  third-party/rust/.cargo/**/BUCK, \
  third-party/rust/vendor/**/BUCK, \
  tmp

[buck2]
digest_algorithms = SHA256
restarter = true

[buck2_re_client]
action_cache_address = bb.systeminit.com:8980
cas_address =  bb.systeminit.com:8980
engine_address = bb.systeminit.com:8980
respect_symlinks=true
enabled = true
capabilities = true

[build]
execution_platforms = prelude-si//platforms:default
