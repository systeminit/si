{
  "compilerOptions": {
    "target": "es5", 
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "lib": ["es6", "es2015", "dom"],
    "outDir": "dist", 
    "rootDir": "src", 
    "removeComments": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [ "node_modules" ],
  "include": [ "src" ]
}

