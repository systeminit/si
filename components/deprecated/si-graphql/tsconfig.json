{
  "compilerOptions": {
    "target": "es5", 
    "module": "commonjs",
    "lib": ["dom","es6"],
    "outDir": "dist", 
    "rootDir": "src", 
    "removeComments": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@modules/*": ["src/modules/*"]
    }
  },
  "exclude": [ "node_modules" ],
  "include": [ "src/**/*.ts" ]
}
