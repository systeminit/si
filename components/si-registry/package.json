{
  "name": "si-registry",
  "private": true,
  "version": "0.1.0",
  "description": "Component/Entity Registry",
  "main": "dist/index.js",
  "bin": {
    "si-generate": "dist/bin/si-generate.js"
  },
  "scripts": {
    "start": "ts-node-dev --no-notify --transpileOnly --respawn -r tsconfig-paths/register src/bin/si-generate.ts",
    "generate": "ts-node -r tsconfig-paths/register src/bin/si-generate.ts",
    "generate-verbose": "ts-node -r tsconfig-paths/register src/bin/si-generate.ts -- -v",
    "prod": "ts-node --log-error -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "test": "jest --passWithNoTests --detectOpenHandles --forceExit",
    "test-watch": "jest --passWithNoTests --detectOpenHandles --forceExit --watch"
  },
  "author": "The System Initiative, Inc.",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/ejs": "^3.0.2",
    "@types/figlet": "^1.2.0",
    "@types/jest": "^24.0.19",
    "@types/listr": "^0.14.2",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-graphql": "^3.1.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.5.4",
    "ts-node-dev": "^1.0.0-pre.44",
    "ts-protoc-gen": "^0.12.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.3",
    "chalk": "^4.0.0",
    "change-case": "^4.1.1",
    "clear": "^0.1.0",
    "commander": "^5.0.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.2",
    "figlet": "^1.3.0",
    "listr": "^0.14.3",
    "ora": "^4.0.3",
    "path": "^0.12.7",
    "winston": "^3.2.1"
  }
}
